<div class="container">
  <h2>List of Tempaltes</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th>   </th>
      </tr>
    </thead>
    <tbody>
      <% @templates.each do |f| %>
      <tr>
        <td><%= f.title %></td>
        <td><%#= f.body %></td>
        <td><%= link_to '<button type="button">Edit</button>'.html_safe, edit_template_path(f.id) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
